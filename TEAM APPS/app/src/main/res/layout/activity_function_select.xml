<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Function_Select">
    <TextView
        android:id="@+id/Text_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Guest "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Button_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF0000"/>

    <Button
        android:id="@+id/Button_Address_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update The Address"
        app:layout_constraintBottom_toTopOf="@id/Button_Verify_Using_Another_User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible" />

    <Button
        android:id="@+id/Button_Verify_Using_Another_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Using Another Users Address"
        app:layout_constraintBottom_toTopOf="@id/Button_Verify_Using_Document"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Address_Update"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Button_Verify_Using_Document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify  Through Documnets and Mobile Operator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Verify_Using_Another_User"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>